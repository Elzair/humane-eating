body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF
  
.centered
  text-align center

.hidden
  display none

.no-decoration
  text-decoration none
  color currentColor 

.topbar
  margin 0 0 10 0
  position absolute
  width 100%
  top calc(0%)
  left 0%

.navigation
  list-style-type none

.nav-element
  @extend .no-decoration
  border 1px solid black
  border-radius 2px 
  padding 10px 10px 10px 10px
  text-decoration none
  color black
  margin-left 5px

flexdir(n)
  -webkit-flex-direction n
  flex-direction n

flexflow(n)
  -webkit-flex-flow n
  -ms-flex-flow n
  -moz-flex-flow n
  flex-flow n

flexalign(n)
  -webkit-flex-align n
  -ms-flex-align n
  -moz-flex-align n
  align-items n
  align-content n

.flexbox
  display -webkit-box
  display -webkit-flex
  display -moz-box
  display -ms-flexbox
  display flex
  flexflow(row wrap)
  flexalign(center)
  
// iPhone 5 
@media only screen and (min-device-width: 320px) and (max-device-width: 568px)
  header.topbar
    height 8%

// Old iPhone 
@media only screen and (min-device-width: 320px) and (max-device-width: 480px)
  header.topbar
    height 8%

// 3rd and 4th gen iPads (Retina display)
@media only screen and (min-device-width: 768px) and (max-device-width: 1024px) and (-webkit-min-device-pixel-ration: 2)
  header.topbar
    height 8%

// 1st and 2nd gen iPads 
@media only screen and (min-device-width: 768px) and (max-device-width: 1024px) and (-webkit-min-device-pixel-ration: 1)
  header.topbar
    height 8%

// All iPad generations - fallback
@media only screen and (min-device-width: 768px) and (max-device-width: 1024px)
  header.topbar
    height 8%

// Desktops and laptops
@media only screen and (min-width: 1224px)
  h1
    font-size 3em
  .contents
    position absolute
    top calc(0%)
    left calc(20%)
  #logo
    left calc(100%-60%)
  #title
  .container
    margin-top 10%

.container footer
  background-color lightgray2
  text-align center
