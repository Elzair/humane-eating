burgundya = rgb(35,30,30)
burgundyb = rgb(110,100,100) 
darkgray = rgb(150,150,150)

lineargradient()
  background-image -moz-linear-gradient(arguments)
  background-image -o-linear-gradient(arguments)
  background-image -webkit-linear-gradient(arguments)
  background-image -ms-linear-gradient(arguments)
  background-image linear-gradient(arguments)

adjustmargins(n)
  -webkit-margin-before n
  -webkit-margin-after n

flexdir(n)
  -webkit-flex-direction n
  flex-direction n

flexflow(n)
  -webkit-flex-flow n
  -ms-flex-flow n
  -moz-flex-flow n
  flex-flow n

flexalign(n)
  -webkit-box-align n
  -webkit-flex-align n
  -moz-box-align n
  -ms-flex-align n
  -webkit-align-items n
  align-items n
  align-content n

flexpack(n)
  -webkit-box-pack n
  -moz-box-pack n
  -ms-flex-pack n
  -webkit-justify-content n
  justify-content n

boxorder(n)
  -moz-box-ordinal-group n
  -webkit-box-ordinal-group n

flexorder(n)
  -ms-flex-order n
  -webkit-order n
  order n

.flexbox
  display -webkit-box
  display -webkit-flex
  display -moz-box
  display -ms-flexbox
  display flex
  flexflow(row nowrap)
  flexalign(center)
  flexpack(center)

.centered
  text-align center

.hidden
  display none

.no-decoration
  text-decoration none
  color currentColor 

.horizontal-padding
  padding 5

.stretch
  position absolute
  left 0
  top 0
  width 100%
  height 115%
  margin 0
  padding 0

.gradient
  background-position initial initial
  background-repeat initial initial

.gray-gradient
  lineargradient(0deg, darkgray 50%, white 100%)
  lineargradient(bottom, darkgray 50%, white 100%)
  background-image -webkit-gradient(linear, left bottom, left top, color-stop(0.5, darkgray), color-stop(1, white))
  @extends .gradient

.burgundy-gradient
  lineargradient(0deg, burgundya 50%, burgundyb 100%)
  lineargradient(bottom, burgundya 50%, burgundyb 100%)
  background-image -webkit-gradient(linear, left bottom, left top, color-stop(0.5, burgundya), color-stop(1, burgundyb))
  @extends .gradient

.border-box
  border 1px solid rgb(80,80,80)
  border-radius 2px
  padding 10px 10px 10px 10px

html
  @extends .stretch

body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  @extends .stretch

a
  color: #00B7FF

.topbar
  position fixed
  width 100%
  top calc(0%)
  left 0%
  z-index 2
  @extends .burgundy-gradient

.container
  z-index 1
  margin-top 10%

.contents
  position relative
  @extends .horizontal-padding

.navigation
  list-style-type none
  @extends .horizontal-padding

.nav-element
  @extend .no-decoration
  @extend .border-box
  @extend .gray-gradient
  margin-left 5px
  

