body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF

@import "fluidity/normalize"
@import "fluidity/type"
@import "fluidity/semantic-grid"
@import "fluidity/css3"
@import "fluidity/elements"
@import "fluidity/forms"

h1
  font-size 2.5em

.centered
  text-align center
  
// iPhone 5 
@media only screen and (min-device-width: 320px) and (max-device-width: 568px)
  .topbar
    height 8%
  img.logo
    visibility hidden

.title-bar
  grid(100%)
  .logo
    img.logo
      grid-space(60)
    h1.name
      grid-space(50%)
      padding 18px
  .navigation
    grid-space(40%)

.container
  grid(80%,960px)
  .page-content
    sidebar
      grid-space(30%)
    article
      grid-space(70%)
  footer
    background-color lightgray2
    text-align center
