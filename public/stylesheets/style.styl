@import "gradient"
@import "flexbox"
@import "misc"

html
  @extend .stretch

body
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  @extend .stretch

a
  color #00B7FF

p
  margin 0

.firstHeading
  margin 0 0 5px 0

.siteNotice > *
  font-size 12px
  font-weight bold

.topbar
  width 100%
  @extend .flexbox
  @extend .flexrow
  @extend .flexstretch
  @extend .green-gradient

.contents
  width 100%
  @extend .flexbox
  @extend .flexrow
  @extend .flexstretch

.settings-bar
  z-index 2
  @extend .flexbox
  @extend .flexrow
  @extend .flexleft
  margin-left 5%

.empty-bar
  @extend .flexbox
  @extend .flexrow
  @extend .flexcenter

.brand
  @extend .flexbox
  @extend .flexrow
  @extend .flexcenter

.add-bar
  z-index 2
  @extend .flexbox
  @extend .flexrow
  @extend .flexright
  margin-right 5%

.navigation
  list-style-type none
  @extend .horizontal-padding

.nav-element
  top auto
  bottom auto
  @extend .no-decoration
  @extend .border-box
  @extend .green-gradient
  font-weight bold

.settings
.add
  @extend .nav-element
  @extend .flexbox
  @extend .flexcol
  @extend .flexcenter
  visibility inherit

.settings-contents
.add-contents
  top auto
  bottom auto
  visibility inherit

.container
  @extend .stretch

.map
  @extend .stretch

.popup
  padding 0

//#content
//  margin 5px 10px 5px 5px

#side
  position absolute
  right 0
  height 100%
  top 0
  //bottom 0
  background-color darkergreen

#side-table
  height 100%
  display table

#side-el
  display table-cell
  vertical-align middle

@import "media"
