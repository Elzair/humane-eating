burgundya = rgb(35,30,30)
burgundyb = rgb(110,100,100) 
darkgray = rgb(150,150,150)
darkgreen = rgb(9, 97, 9)
lightgreen = rgb(95, 194, 70)

mycalc(property, result)
  property -moz-calc(result)
  property -webkit-calc(result)
  property -o-calc(result)
  property calc(result)

lineargradient()
  background-image -moz-linear-gradient(arguments)
  background-image -o-linear-gradient(arguments)
  background-image -webkit-linear-gradient(arguments)
  background-image -ms-linear-gradient(arguments)
  background-image linear-gradient(arguments)

adjustmargins(n)
  -webkit-margin-before n
  -webkit-margin-after n

flexdir(n)
  -webkit-flex-direction n
  flex-direction n

flexflow(n)
  -webkit-flex-flow n
  -ms-flex-flow n
  -moz-flex-flow n
  flex-flow n

flexalign(n)
  -webkit-box-align n
  -webkit-flex-align n
  -moz-box-align n
  -ms-flex-align n
  -webkit-align-items n
  align-items n
  align-content n

flexpack(n)
  -webkit-box-pack n
  -moz-box-pack n
  -ms-flex-pack n
  -webkit-justify-content flex-{n}
  -webkit-justify-content n
  justify-content flex-{n}
  justify-content n

boxorder(n)
  -moz-box-ordinal-group n
  -webkit-box-ordinal-group n

flexorder(n)
  -ms-flex-order n
  -webkit-order n
  order n

.flexbox
  display -webkit-box
  display -webkit-flex
  display -moz-box
  display -ms-flexbox
  display flex

.flexrow
  flexflow(row nowrap)

.flexcol
  flexflow(column nowrap)

.flexcenter
  flexalign(center)
  flexpack(center)

.flexleft
  flexalign(start)
  flexpack(start)

.flexright
  flexalign(end)
  flexpack(end)

.flexstretch
  flexalign(center)
  flexpack(space-between)
  flexpack(justify)
  
.centered
  text-align center

.hidden
  display none

.no-decoration
  text-decoration none
  color currentColor 

.horizontal-padding
  padding 5

.stretch
  left 0
  top 0
  width 100%
  height 100%
  margin 0
  padding 0

.gradient
  background-position initial initial
  background-repeat initial initial

.gray-gradient
  lineargradient(0deg, darkgray 50%, white 100%)
  lineargradient(bottom, darkgray 50%, white 100%)
  background-image -webkit-gradient(linear, left bottom, left top, color-stop(0.5, darkgray), color-stop(1, white))
  @extend .gradient

.burgundy-gradient
  lineargradient(0deg, burgundya 50%, burgundyb 100%)
  lineargradient(bottom, burgundya 50%, burgundyb 100%)
  background-image -webkit-gradient(linear, left bottom, left top, color-stop(0.5, burgundya), color-stop(1, burgundyb))
  @extend .gradient

.green-gradient
  lineargradient(0deg, darkgreen 50%, lightgreen 50%)
  lineargradient(bottom, darkgreen 50%, lightgreen 50%)
  background-image -webkit-gradient(linear, left bottom, left top, color-stop(0.5, darkgreen), color-stop(0.5, lightgreen))

.border-box
  border 1px solid rgb(80,80,80)
  border-radius 2px
  padding 4px 4px 4px 4px
  //padding 10px 10px 10px 10px

html
  @extend .stretch

body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  @extend .stretch

a
  color: #00B7FF

.topbar
  width 100%
  @extend .flexbox
  @extend .flexrow
  @extend .flexstretch
  @extend .green-gradient

.contents
  width 100%
  @extend .flexbox
  @extend .flexrow
  @extend .flexstretch

.search-bar
  @extend .flexbox
  @extend .flexrow
  @extend .flexleft

.brand
  @extend .flexbox
  @extend .flexrow
  @extend .flexcenter

.list-bar
  @extend .flexbox
  @extend .flexrow
  @extend .flexright

.navigation
  list-style-type none
  @extend .horizontal-padding

.nav-element
  @extend .no-decoration
  @extend .border-box
  @extend .green-gradient
  font-weight bold
  //margin-left 5px

.search
  @extend .nav-element
  margin-left 4px

.list
  @extend .nav-element
  margin-right 4px

.container
  @extend .stretch

.map
  @extend .stretch

