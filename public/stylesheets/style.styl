body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF

@import "fluidity/normalize"
@import "fluidity/type"
@import "fluidity/semantic-grid"
@import "fluidity/css3"
@import "fluidity/elements"
@import "fluidity/forms"

h1
  font-size 2.5em

.title-bar
  grid(100%,62)
  .logo
    img.logo
      grid-space(60,60)
    h1.name
      grid-space(50%,60)
      padding 18px
  .navigation
    grid-space(40%)

.container
  grid(80%,960px)
  .page-content
    sidebar
      grid-space(30%)
    article
      grid-space(70%)
  footer
    background-color lightgray2
    text-align center
