burgundya = rgb(35,30,30)
burgundyb = rgb(110,100,100) 
darkgray = rgb(150,150,150)

lineargradient()
  background-image -moz-linear-gradient(arguments)
  background-image -o-linear-gradient(arguments)
  background-image -webkit-linear-gradient(arguments)
  background-image -ms-linear-gradient(arguments)
  background-image linear-gradient(arguments)

adjustmargins(n)
  -webkit-margin-before n
  -webkit-margin-after n

flexdir(n)
  -webkit-flex-direction n
  flex-direction n

flexflow(n)
  -webkit-flex-flow n
  -ms-flex-flow n
  -moz-flex-flow n
  flex-flow n

flexalign(n)
  -webkit-box-align n
  -webkit-flex-align n
  -moz-box-align n
  -ms-flex-align n
  -webkit-align-items n
  align-items n
  align-content n

flexpack(n)
  -webkit-box-pack n
  -moz-box-pack n
  -ms-flex-pack n
  -webkit-justify-content flex-{n}
  -webkit-justify-content n
  justify-content flex-{n}
  justify-content n

boxorder(n)
  -moz-box-ordinal-group n
  -webkit-box-ordinal-group n

flexorder(n)
  -ms-flex-order n
  -webkit-order n
  order n

.flexbox
  display -webkit-box
  display -webkit-flex
  display -moz-box
  display -ms-flexbox
  display flex

.flexrow
  flexflow(row nowrap)

.flexcol
  flexflow(column nowrap)

.flexcenter
  flexalign(center)
  flexpack(center)

.align-left
  flex-item-align start
  -webkit-align-self start
  align-self start

.align-right
  flex-item-align end
  -webkit-align-self end
  align-self end

.centered
  text-align center

.hidden
  display none

.no-decoration
  text-decoration none
  color currentColor 

.horizontal-padding
  padding 5

.stretch
  left 0
  top 0
  width 100%
  height 100%
  margin 0
  padding 0

.gradient
  background-position initial initial
  background-repeat initial initial

.gray-gradient
  lineargradient(0deg, darkgray 50%, white 100%)
  lineargradient(bottom, darkgray 50%, white 100%)
  background-image -webkit-gradient(linear, left bottom, left top, color-stop(0.5, darkgray), color-stop(1, white))
  @extend .gradient

.burgundy-gradient
  lineargradient(0deg, burgundya 50%, burgundyb 100%)
  lineargradient(bottom, burgundya 50%, burgundyb 100%)
  background-image -webkit-gradient(linear, left bottom, left top, color-stop(0.5, burgundya), color-stop(1, burgundyb))
  @extend .gradient

.border-box
  border 1px solid rgb(80,80,80)
  border-radius 2px
  padding 10px 10px 10px 10px

html
  @extend .stretch

body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  @extend .stretch
  //@extend .flexbox
  //@extend .flexcol

a
  color: #00B7FF

.topbar
  @extend .flexbox
  @extend .flexrow
  @extend .flexcenter
  //position fixed
  width 100%
  //top calc(0%)
  //left 0%
  //z-index 2
  @extend .burgundy-gradient

.contents
  @extend .flexbox
  @extend .flexrow
  @extend .flexcenter
  //position relative
  //height 70%
  //@extend .horizontal-padding

.brand
  @extend .flexbox
  @extend .flexrow
  @extend .flexcenter

.navigation
  list-style-type none
  @extend .horizontal-padding

.nav-element
  @extend .no-decoration
  @extend .border-box
  @extend .gray-gradient
  //margin-left 5px

.search
  @extend .nav-element
  @extend .align-left

.list
  @extend .nav-element
  @extend .align-right

.container
  @extend .stretch

.map
  @extend .stretch

// iPhone 5 
@media only screen and (min-device-width: 320px) and (max-device-width: 568px)
  .title
    color white
    adjustmargins(0.5em)
  .logo
    display none
  .navigation
    display none
    
@media only screen and (min-device-width: 320px) and (max-device-width: 568px) and (orientation: portrait)
  .container
  .map
    height calc(102%)

@media only screen and (min-device-width: 320px) and (max-device-width: 568px) and (orientation: portrait)
  .container
  .map
    height calc(100%)

// Old iPhone 
@media only screen and (min-device-width: 320px) and (max-device-width: 480px)
  .title
    color white
    adjustmargins(0.5em)
  .logo
    display none
  .navigation
    display none

// Old iPhone portrait mode
@media only screen and (min-device-width: 320px) and (max-device-width: 480px) and (orientation: portrait)
  .container
    margin-top calc(8%)
    height calc(70%)

// Old iPhone landscape mode
@media only screen and (min-device-width: 320px) and (max-device-width: 480px) and (orientation: landscape)
  .container
    margin-top calc(10%)
    height calc(50%)

