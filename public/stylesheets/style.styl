body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF

@import "fluidity/normalize"
@import "fluidity/type"
@import "fluidity/semantic-grid"
@import "fluidity/css3"
@import "fluidity/elements"
@import "fluidity/forms"

h1
  font-size 2.5em

.centered
  text-align center

.hidden
  display none
  
// iPhone 5 
@media only screen and (min-device-width: 320px) and (max-device-width: 568px)
  .topbar
    height 8%
  #title
    grid-space(100%)
    text-align center

// iPhone 2G, 3G, 4, 4S
@media only screen and (min-device-width: 320px) and (max-device-width: 480px)
  .topbar
    height 8%
  #title
    grid-space(100%)
    text-align center

// 3rd and 4th gen iPads (Retina display)
@media only screen and (min-device-width: 768px) and (max-device-width: 1024px) and (-webkit-min-device-pixel-ration: 2)
  .topbar
    height 8%
  #title
    grid-space(100%)
    text-align center

// 1st and 2nd gen iPads 
@media only screen and (min-device-width: 768px) and (max-device-width: 1024px) and (-webkit-min-device-pixel-ration: 1)
  .topbar
    height 8%
  #title
    grid-space(100%)
    text-align center

// All iPad generations - fallback
@media only screen and (min-device-width: 768px) and (max-device-width: 1024px)
  .topbar
    height 8%
  #logo
    grid-space(100%)
    text-align center

// Desktops and laptops
@media only screen and (min-width: 1224px)
  .title-bar
    grid(100%)
    .empty
      grid-space(25%)
    .title-header
      grid-space(50%)
      .brand
        #title
          margin 10px, 0px, 10px, 0px

.container
  grid(80%,960px)
  .page-content
    sidebar
      grid-space(30%)
    article
      grid-space(70%)
  footer
    background-color lightgray2
    text-align center
