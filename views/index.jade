extends layout

block content
  header.topbar.flexbox
    .contents.flexbox
      section.brand.flexbox
        .logo#logo
          img(src="/images/america_for_animals_transparent.png", alt="America for Animals logo")
        h1.title#title Humane Eating 
      section.navigation.flexbox#navbar
        li: a.nav-element(href="#") Find
        li: a.nav-element(href="#") Share
  section.container.stretch
    .stretch#map-canvas
  script(type="text/javascript", src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDTv8WOV2-xUrcaAe33gI0k8zlwHMpt5_k&sensor=false")
  script.
    require(['javascripts/home'], function (home) {
      $(document).ready(function() {
        home.init_gm();
        url = 'http://localhost:3000/api/locations/23?json=locationInfo'; 
        $.getJSON(url)
        .done(function(data) {
          console.log(data);
        })
        .fail(function(err) {
          console.log(err);
        });
      });
    });
